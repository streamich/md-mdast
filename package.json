{
    "name": "md-mdast",
    "version": "1.1.0",
    "description": "Tiny but fast Markdown to AST parser",
    "main": "dist/index.js",
    "repository": {
        "type": "git",
        "url": "https://github.com/onp4/md-mdast.git"
    },
    "scripts": {
        "clean": "rimraf dist lib",
        "prebuild": "yarn clean",
        "build": "tsc && browserify --node --standalone create -o dist/index.js lib/index.js",
        "test": "jest",
        "release": "semantic-release",
        "preversion": "yarn run lint && yarn run test",
        "postversion": "git push && git push --tags && npm publish",
        "precommit": "pretty-quick --staged && yarn run lint",
        "prepush": "yarn run test",
        "prettier": "prettier --write '**/*.{ts,json}'",
        "lint": "yarn tslint",
        "tslint": "tslint './src/**/*.{ts,tsx}' -t verbose"
    },
    "dependencies": {},
    "devDependencies": {
        "@types/jest": "^22.2.3",
        "@types/node": "^10.1.3",
        "husky": "^0.14.3",
        "jest": "^23.0.1",
        "git-cz": "^1.7.0",
        "prettier": "^1.13.0",
        "pretty-quick": "^1.6.0",
        "rimraf": "2.6.2",
        "semantic-release": "^15.5.0",
        "@semantic-release/changelog": "^2.0.2",
        "@semantic-release/npm": "^3.3.1",
        "@semantic-release/git": "^5.0.0",
        "ts-jest": "^22.4.6",
        "ts-node": "^6.0.5",
        "tslint": "^5.10.0",
        "tslint-config-mailonline": "^3.0.0",
        "typescript": "^2.8.3",
        "browserify": "^16.2.2"
    },
    "prettier": {
        "printWidth": 120,
        "tabWidth": 4,
        "useTabs": false,
        "semi": true,
        "singleQuote": true,
        "trailingComma": "es5",
        "bracketSpacing": false,
        "jsxBracketSameLine": false
    },
    "lint-staged": {
        "**/*.js": [
            "prettier --write",
            "git add"
        ]
    },
    "config": {
        "commitizen": {
            "path": "git-cz"
        }
    },
    "jest": {
        "moduleFileExtensions": [
            "ts",
            "tsx",
            "js",
            "jsx"
        ],
        "transform": {
            "^.+\\.tsx?$": "ts-jest"
        },
        "testRegex": ".*/__tests__/.*\\.(test|spec)\\.(jsx?|tsx?)$"
    },
    "release": {
        "verifyConditions": [
            "@semantic-release/changelog",
            "@semantic-release/npm",
            "@semantic-release/git"
        ],
        "prepare": [
            "@semantic-release/changelog",
            "@semantic-release/npm",
            "@semantic-release/git"
        ]
    },
    "keywords": [
        "markdown",
        "md",
        "parser",
        "ast",
        "mdast"
    ]
}
